<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="#d4ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ThemeOverlay.AppCompat.Light"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
            android:id="@+id/says_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/says"
            android:paddingTop="10dp"
            android:textSize="19sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/author_item_text"
            />

        <TextView
            android:id="@+id/author_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            tools:text="jdjdjd"
            android:layout_margin="8dp"
            android:textSize="@dimen/synopsis_label_size"/>

    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/says_label"

        android:layout_marginTop="7dp"
        android:gravity="fill"
        android:padding="8dp"

        android:textColor="#000000"
        tools:text="kkkkkkkkkkkkk" />
    </RelativeLayout>




</android.support.v7.widget.CardView>
